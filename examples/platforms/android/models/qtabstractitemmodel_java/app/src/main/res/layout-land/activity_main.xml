<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/qmlFrame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:padding="20dp">
        <Button
            android:id="@+id/addRowAtEndButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/button_margins"
            android:layout_weight="1"
            android:maxLines="3"
            android:text="@string/add_row"
            android:textSize="@dimen/text_size"
            android:padding="@dimen/button_padding"
            app:cornerRadius="@dimen/corner_radius"/>
        <Button
            android:id="@+id/removeRowFromEndButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/button_margins"
            android:layout_weight="1"
            android:maxLines="3"
            android:text="@string/remove_row"
            android:textSize="@dimen/text_size"
            android:padding="@dimen/button_padding"
            app:cornerRadius="@dimen/corner_radius"/>
        <Button
            android:id="@+id/addColumnButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/button_margins"
            android:layout_weight="1"
            android:maxLines="3"
            android:text="@string/add_column"
            android:textSize="@dimen/text_size"
            android:padding="@dimen/button_padding"
            app:cornerRadius="@dimen/corner_radius"/>
        <Button
            android:id="@+id/removeLastColumnButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/button_margins"
            android:layout_weight="1"
            android:maxLines="3"
            android:text="@string/remove_column"
            android:textSize="@dimen/text_size"
            android:padding="@dimen/button_padding"
            app:cornerRadius="@dimen/corner_radius"/>
    </LinearLayout>
</LinearLayout>
